#!/bin/bash
function up_arch {
    yay -Syu 2> /dev/null
}

function up_elementary {
    sudo apt update && sudo apt dist-upgrade 2> /dev/null
}

function up_fedora {
    sudo dnf update && sudo dnf upgrade
}

case $(uname -s) in
    Darwin|FreeBSD)
        brew update && brew upgrade -n
        ;;
    Linux)
        case $(lsb_release -is) in
            Fedora)
                up_fedora
                ;;
            Elementary)
                up_elementary
                ;;
            Arch)
                up_arch
                ;;
        esac
esac

