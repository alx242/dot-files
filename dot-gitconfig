[alias]
        st = status
        co = checkout
        br = branch

        dt = difftool

	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
        lp = log -p

        wc = whatchanged

        lc = log ORIG_HEAD.. --stat --no-merges
        in = log HEAD..origin/master
        out = log origin/master..HEAD
