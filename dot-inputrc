# Unicode I/O hack
set input-meta on
set output-meta on
set convert-meta off

# Ctrl+arrows
"\e[1;5D": backward-word
"\e[1;5C": forward-word
"\e[1;5A": backward-paragraph
"\e[1;5B": forward-paragraph

# Alt+arrows
"\e[1;3D": backward-word
"\e[1;3C": forward-word
"\e[1;3A": backward-paragraph
"\e[1;3B": forward-paragraph

