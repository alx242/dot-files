(defun generate-etags ()
  (interactive)
  ;; Erlang
  (shell-command "etags --language=erlang \
 -o ${ERL_TOP}/../TAGS \
 `find ${ERL_TOP}/../lib -iregex '.*.erl$' -o -iregex '.*hrl$' | grep -v '\.eunit'`")

  ;; Python
  ;; (shell-command "etags -a --language=python
  ;; -o ${PYTHON_DIRS}/TAGS `find ${PYTHON_DIRS} | grep -E '(\.py)$'`")
  nil
  )

